{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":enablePreCommit"
  ],
  "constraints": {
    "poetry": ">=1.8.0"
  },
  "packageRules": [
    {
      "description": "Group all non-major dependencies except python",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "excludePackageNames": ["python"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Group python version updates",
      "matchPackageNames": ["python"],
      "groupName": "python-updates",
      "groupSlug": "python-major-minor"
    },
    {
      "description": "Group all pre-commit updates",
      "matchManagers": ["pre-commit"],
      "groupName": "all non-major dependencies"
    }
  ],
  "rangeStrategy": "bump"
}
